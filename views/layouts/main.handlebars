<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>bibliomania</title>
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="icon" href="data:;base64,=" />
    <link href="/path/to/material-icons/iconfont/material-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  </head>
  {{!-- this is the main.handlebars file --}}
  
  <body class="body-home">
    <header class="grad">
      {{!-- this is the header section   --}}
      <a><img
          class="logo"
          src="./images/bibliomania.png"
          alt="bibliomania logo"
        /></a>
       
      <ul class="navbar-home">
        <li><a href="./" class="active">Home</a></li>
        
        {{#if swipesButton}}
          <li><a href="/bookswipe">More Books!!</a></li>
        {{else}}
          <li><a href="/library">My Library</a></li>
        {{/if}}
        {{!-- this is the main.handlebars file  if you are logged in you will see the logout button --}}
        {{#if logged_in}}
          <li><a href="./api/users/logout" id="logout">Logout</a></li>
        {{else}}
          <li><a href="./signup">Login</a></li>
        {{/if}}
      </ul>
    </header>
    <section class="background">
      
      {{!-- this is the main.handlebars file  this is where the body of the page will be rendered --}}
      {{{body}}}
      {{!-- this is if the background is none   then the background will be none --}}
      {{#if background_none}}
        <img
          src="./images/library.jpg"
          class="library"
          id="stock-background-photo"
          style="display: none;"
        />
      {{else}}
        <img
          src="./images/library.jpg"
          class="library"
          id="stock-background-photo"
        />
      {{/if}}
    </section>
    {{!-- this is if the  logged in is true then the logout.js will be rendered --}}
    {{#if logged_in}}
      <script src="./js/logout.js"></script>
    {{/if}}
  </body>
</html>